set fail 1                                  # Ensure file fails on command failure
#set autoboot 1
#gfxmode 800x600

menuentry NexNix {
    set root Boot                           # Set root directory, Boot is mounted by default
    boottype nexnix
    payload /nexke
    bootargs "-graphicsmode $NNGRAPHICSMODE -loglevel $NNLOGLEVEL"
    boot            # Boot it up!
}

menuentry NexBoot {
    boottype chainload
    payload /Devices/BiosDisk1
    boot
}

showui
